@using mbill_blazor_admin.Models.Core
@using mbill_blazor_admin.Models.Base
@namespace mbill_blazor_admin.Pages.Core.User
@page "/core/user"

<PageContainer Title="用户管理">
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>主页</BreadcrumbItem>
            <BreadcrumbItem>系统管理</BreadcrumbItem>
            <BreadcrumbItem>用户管理</BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <ChildContent>
        <Card>
            <Form Model="page" Layout="inline">
                <FormItem Label="用户名">
                    <Input @bind-Value="@context.Username" />
                </FormItem>

                <FormItem Label="昵称">
                    <Input @bind-Value="@context.Nickname" />
                </FormItem>

                <FormItem Label="是否启用">
                    <Select DataSource="@_isEnableStatus"
                            @bind-Value="@context.IsEnable"
                            ValueName="@nameof(SelectModel.Id)"
                            LabelName="@nameof(SelectModel.Name)"
                            Style="width:120px"
                            OnSelectedItemChanged="IsEnableHandleChange">
                    </Select>
                </FormItem>

                <FormItem Label="角色">
                    <Select DataSource="@_rolesInfo"
                            @bind-Value="@context.RoleId"
                            ValueName="@nameof(RoleModel.Id)"
                            LabelName="@nameof(RoleModel.Name)"
                            Style="width:120px">
                    </Select>
                </FormItem>

                <FormItem Label="创建时间">
                    <DatePicker @bind-Value="@context.CreateTime" />
                </FormItem>

                <Button Type="@ButtonType.Primary" OnClick ="EnterInquireRole">
                    查询
                </Button>
            </Form>
        </Card>
        <Card>
            <Table @ref="table"
                   TItem="UserModel"
                   DataSource="@_users"
                   Loading="@_loading"
                   Total="_total"
                   ScrollX="1600"
                   OnChange="onChange"
                   @bind-PageIndex="page.Page"
                   @bind-PageSize="page.Size">
                @*<Selection Key="@(context.Id.ToString())" />*@
                <AntDesign.Column Title="ID" Width="80" Fixed="left" @bind-Field="@context.Id" Sortable />
                <AntDesign.Column Title="昵称" Width="130" Fixed="left" @bind-Field="@context.Nickname" />
                <AntDesign.Column Title="用户姓名" Width="130" Fixed="left" @bind-Field="@context.Username" />
                <AntDesign.Column Title="性别" @bind-Field="@context.Gender" />
                <AntDesign.Column Title="邮箱" @bind-Field="@context.Email" />
                <AntDesign.Column Title="电话" @bind-Field="@context.Phone" />
                <AntDesign.Column Title="地址" @bind-Field="@context.Address" />
                <AntDesign.Column Title="角色" @bind-Field="@context.Roles">
                    @foreach (var role in context.Roles)
                    {
                        <Tag Color="blue">@role.Name</Tag>
                    }
                </AntDesign.Column>
                <AntDesign.Column Title="最后一次登陆时间" @bind-Field="@context.LastLoginTime" />
                <AntDesign.Column Title="启用状态" Field="@context.IsEnable">
                    <Switch @bind-Value="@context.IsEnable"></Switch>
                </AntDesign.Column>
                <ActionColumn Title="操作">
                    <Space>
                        <SpaceItem><Button Type="primary" Ghost OnClick="()=>Edit()">编辑</Button></SpaceItem>
                    </Space>
                    <Space>
                        <SpaceItem><Button Danger OnClick="()=>Delete(context.Id)">删除</Button></SpaceItem>
                    </Space>
                </ActionColumn>
            </Table>
            @*<br />
                <h5>已选:</h5>
                @if (_selectedRows != null && _selectedRows.Any())
                {
                    <Button Danger Size="small" OnClick="@(e => { _selectedRows = null; })">Clear</Button>

                    @foreach (var selected in _selectedRows)
                    {
                        <Tag @key="selected.Id" Closable OnClose="e=>RemoveSelection(selected.Id)">@selected.Id-@selected.Nickname</Tag>
                    }
                }*@
        </Card>
    </ChildContent>
</PageContainer>

